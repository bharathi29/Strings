import java.util.Scanner;
public class Nineteen {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int count=0;
        int n=0;
        System.out.println("Enter n :");
        n=sc.nextInt();
        int a[]=new int[n];
        for(int i=0;i<n;i++)
        {
            a[i]=sc.nextInt();
        }
        for(int i=0;i<n;i++)
        {
            if(a[i]<0)
            {
                count++;
            }
        }
        System.out.println("Count :"+count);
    }
}
